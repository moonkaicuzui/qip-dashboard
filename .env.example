# Google Drive API 설정 (보안 주의!)
# 이 파일을 복사해서 .env로 만드신 후 실제 값을 입력하세요
# .env 파일은 절대 Git에 커밋하지 마세요!

# Google Service Account Credentials
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=config_files/service_account_key.json

# Google Drive 폴더 ID
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# 데이터 자동 동기화 설정
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=30

# 보안 설정
SECURE_MODE=true
API_RATE_LIMIT=100

# Oracle Cloud 설정 (배포 시)
ORACLE_INSTANCE_IP=
ORACLE_USERNAME=ubuntu

# Streamlit Cloud 설정
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0